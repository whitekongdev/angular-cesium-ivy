{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "angular-cesium": [
        "dist/angular-cesium"
      ],
      "angular-cesium/*": [
        "dist/angular-cesium/*"
      ],
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "full"
  }
}
